@model Web_Cinema_App.Models.CinemaModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить название</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NameCinema" class="control-label">Кинотеатр</label>
                <input asp-for="NameCinema" class="form-control" />
                <span asp-validation-for="NameCinema" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

