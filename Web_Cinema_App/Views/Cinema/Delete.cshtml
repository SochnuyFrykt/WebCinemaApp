@model Web_Cinema_App.Models.CinemaModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить кинотеатр и все записи, что с ним связанны?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Кинонеатр
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameCinema)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться</a>
    </form>
</div>
