@model Web_Cinema_App.Models.CinemaRoomModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Вы уверенны, что хотите удалить кинозал и все записи, что с ним связаны?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название кинозала
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameRoom)
        </dd>
        <dt class = "col-sm-2">
            Номер кинотеатра
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCinema)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться</a>
    </form>
</div>
