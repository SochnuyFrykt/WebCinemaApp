@model IEnumerable<Web_Cinema_App.Models.CinemaRoomModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Кинозалы</h1>

<p>
    <a asp-action="Create">Добавить кинозал</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Номер кинозала</th>
            <th>Название кинозала</th>
            <th>Номер кинотеатра</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.NameRoom)</td>
                <td>@Html.DisplayFor(modelItem => item.IdCinema)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить название</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
