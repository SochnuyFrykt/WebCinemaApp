@model Web_Cinema_App.Models.FilmModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Вы уверенны что хотите удалить этот фильм?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название фильма
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Номер жанра
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdGenre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться</a>
    </form>
</div>
