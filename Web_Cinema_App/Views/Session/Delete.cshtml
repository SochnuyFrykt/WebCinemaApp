@model Web_Cinema_App.Models.SessionModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Вы уверенны, что хотите удалить данный сеанс?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Дата показа
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            Время показа
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class = "col-sm-2">
            Номер фильма
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdFilm)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться</a>
    </form>
</div>
