@model Web_Cinema_App.Models.TicketModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Вы верены, что хотите удалить этот билет?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Номер сеанса
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdSession)
        </dd>
        <dt class = "col-sm-2">
            Номер места
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPlace)
        </dd>
        <dt class = "col-sm-2">
            Статус
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            Цена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться</a>
    </form>
</div>
