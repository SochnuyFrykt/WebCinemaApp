@model IEnumerable<Web_Cinema_App.Models.TicketModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Добавить билет</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Сеанс
            </th>
            <th>
                Номер места
            </th>
            <th>
                Статус
            </th>
            <th>
                Цена
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdSession)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPlace)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
